<?xml version="1.0" encoding="utf-8"?>
<Theme>

  <sharedAnimations>
    <animation name="redblink">
      <color r="7" g="0" b="0" duration="5" />
      <color r="6" g="0" b="0" duration="5" />
      <color r="5" g="0" b="0" duration="5" />
      <color r="4" g="0" b="0" duration="5" />
      <color r="5" g="0" b="0" duration="5" />
      <color r="6" g="0" b="0" duration="5" />
    </animation>
    <animation name="blueblink">
      <color r="0" g="0" b="7" duration="5" />
      <color r="0" g="0" b="6" duration="5" />
      <color r="0" g="0" b="5" duration="5" />
      <color r="0" g="0" b="4" duration="5" />
      <color r="0" g="0" b="5" duration="5" />
      <color r="0" g="0" b="6" duration="5" />
    </animation>
    <animation name="yellowblink">
      <color r="7" g="7" b="0" duration="5" />
      <color r="6" g="6" b="0" duration="5" />
      <color r="5" g="5" b="0" duration="5" />
      <color r="4" g="4" b="0" duration="5" />
      <color r="5" g="5" b="0" duration="5" />
      <color r="6" g="6" b="0" duration="5" />
    </animation>
    <animation name="greenblink">
      <color r="0" g="7" b="0" duration="5" />
      <color r="0" g="6" b="0" duration="5" />
      <color r="0" g="5" b="0" duration="5" />
      <color r="0" g="4" b="0" duration="5" />
      <color r="0" g="5" b="0" duration="5" />
      <color r="0" g="6" b="0" duration="5" />
    </animation>
    <animation name="purpleblink">
      <color r="7" g="0" b="7" duration="5" />
      <color r="6" g="0" b="6" duration="5" />
      <color r="5" g="0" b="5" duration="5" />
      <color r="4" g="0" b="4" duration="5" />
      <color r="5" g="0" b="5" duration="5" />
      <color r="6" g="0" b="6" duration="5" />
    </animation>
    <animation name="redFlash">
      <color r="7" g="7" b="7" duration="2" />
      <color r="7" g="5" b="5" duration="1" />
      <color r="7" g="0" b="0" duration="10" />
      <color r="7" g="3" b="3" duration="1" />
    </animation>
    
    
  </sharedAnimations>

  <KeyGroups>
    <group name="NumBlockKeys">
      <key name="Num1" />
      <key name="Num2" />
      <key name="Num3" />
      <key name="Num4" />
      <key name="Num5" />
      <key name="Num6" />
      <key name="Num7" />
      <key name="Num8" />
      <key name="Num9" />
      <key name="Num0" />
      <key name="Num," />
      <key name="NumEnter" />
      <key name="Num+" />
      <key name="Num-" />
      <key name="Num/" />
      <key name="Num*" />
      <key name="NumLock" />
    </group>
  </KeyGroups>


    <Map name="default">
    <all>
      <colorGroup type="default" syncName="default/default" syncTo="default/default">
          <animation name="redblink"/>
      </colorGroup>
    </all>
  </Map>

  
  <Map name="Shift">
    <activateOnKey>
      <group>
        <key keyname="LShift" />
      </group>
      <group>
        <key keyname="RShift" />
      </group>
    </activateOnKey>
    <all>
      <colorGroup type="default" syncTo="default/default">
        <animation name="blueblink" />
      </colorGroup>
    </all>
   </Map>
  
  <Map name="Ctrl">
    <activateOnKey>
      <group>
        <key keyname="LCtrl" />
      </group>
      <group>
        <key keyname="RCtrl" />
      </group>
    </activateOnKey>
    <all>
      <colorGroup type="default" syncTo="default/default">
        <animation name="yellowblink" />
      </colorGroup>
    </all>
  </Map>

  <Map name="Alt">
    <activateOnKey>
      <group>
        <key keyname="LAlt" />
      </group>
      <group>
        <key keyname="AltGr" />
      </group>
    </activateOnKey>
    <all>
      <colorGroup type="default" syncTo="default/default">
        <animation name="greenblink" />
      </colorGroup>
    </all>
  </Map>


  <Map name="Ctrl + Alt">
    <activateOnKey>
      <group>
        <key keyname="LAlt" />
        <key keyname="LCtrl" />
      </group>
      <group>
        <key keyname="AltGr" />
        <key keyname="LCtrl" />
      </group>
      <group>
        <key keyname="LAlt" />
        <key keyname="RCtrl" />
      </group>
      <group>
        <key keyname="AltGr" />
        <key keyname="RCtrl" />
      </group>
      <group>
        <key keyname="LAlt" />
        <key keyname="LCtrl" />
      </group>
      <group>
        <key keyname="AltGr" />
        <key keyname="LCtrl" />
      </group>
      <group>
        <key keyname="LAlt" />
        <key keyname="RCtrl" />
      </group>
      <group>
        <key keyname="AltGr" />
        <key keyname="RCtrl" />
      </group>
    </activateOnKey>
    <all>
      <colorGroup type="default" syncTo="default/default">
        <animation name="purpleblink" />
      </colorGroup>
    </all>
  </Map>


  
  <Map name="CapslockOn">
    <activateOnKey>
      <group>
        <key keyname="CapsLockActivated" /> <!-- Note: This is a Special Key Event! -->
      </group>
    </activateOnKey>
    <all>
      <colorGroup type="default" syncTo="default/default">
        <animation name="redFlash" />
      </colorGroup>
    </all>
  </Map>



  <Map name="NumLockOn">
    <activateOnKey>
      <group>
        <key keyname="NumLockActivated" /> <!-- Note: This is a Special Key Event! -->
      </group>
    </activateOnKey>
    <all>
      <colorGroup type="default">
        <animation name="redblink"/>
      </colorGroup>
    </all>
    <KeyGroup name="NumBlockKeys">
      <colorGroup type="default">
        <color r="7" g="7" b="7"/>
      </colorGroup>
    </KeyGroup>
    
  </Map>


  <Map name="CapsLockAndNumLockOn">
    <activateOnKey>
      <group>
        <key keyname="NumLockActivated" /> <!-- Note: This is a Special Key Event! -->
        <key keyname="CapsLockActivated" /> <!-- Note: This is a Special Key Event! -->
      </group>
    </activateOnKey>
    <all>
      <colorGroup type="default">
          <animation name="redFlash" />
      </colorGroup>
    </all>
    <KeyGroup name="NumBlockKeys">
      <colorGroup type="default">
        <color r="7" g="7" b="7"/>
      </colorGroup>
    </KeyGroup>

  </Map>


  <Map name="NumLockOnCtrl">
    <activateOnKey>
      <group>
        <key keyname="NumLockActivated" /> <!-- Note: This is a Special Key Event! -->
        <key keyname="LCtrl" />
      </group>
      <group>
        <key keyname="NumLockActivated" /> <!-- Note: This is a Special Key Event! -->
        <key keyname="RCtrl" />
      </group>
    </activateOnKey>
    
    <all>
      <colorGroup type="default" syncTo="default/default">
        <animation name="yellowblink" />
      </colorGroup>
    </all>
    <KeyGroup name="NumBlockKeys">
      <colorGroup type="default">
        <color r="7" g="7" b="7"/>
      </colorGroup>
    </KeyGroup>

  </Map>
  
</Theme>